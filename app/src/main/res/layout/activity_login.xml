<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_login"
    android:background="@color/colorAppMyNews3"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/header_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/myRss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poller_one"
        android:text="@string/myrssnews"
        android:textSize="35sp"
        android:gravity="center"
        android:textColor="@color/col"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/name_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintTop_toTopOf="@+id/email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/email" />


    <EditText
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="12sp"
        android:background="@android:color/transparent"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorAppMyNews2"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textSize="12sp"
        android:layout_marginTop="25dp"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/name_icon"
        app:srcCompat="@drawable/ic_mail_outline_24"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.06"
        app:layout_constraintStart_toStartOf="@+id/name_image"
        app:layout_constraintBottom_toBottomOf="@+id/name_image"
        app:layout_constraintTop_toTopOf="@+id/name_image"
        app:layout_constraintEnd_toStartOf="@+id/email" />


    <ImageView
        android:id="@+id/password_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        app:layout_constraintBottom_toBottomOf="@+id/pass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pass"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent="0.75" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="12sp"
        android:background="@android:color/transparent"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="15"
        android:maxLines="1"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorAppMyNews2"
        android:textCursorDrawable="@drawable/cursor_color"
        android:textSize="12sp"
        android:layout_marginTop="15dp"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <ImageView
        android:id="@+id/email_icon"
        app:srcCompat="@drawable/ic_vpn_key_24"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.06"
        app:layout_constraintStart_toStartOf="@+id/password_image"
        app:layout_constraintBottom_toBottomOf="@+id/password_image"
        app:layout_constraintTop_toTopOf="@+id/password_image"
        app:layout_constraintEnd_toStartOf="@+id/pass" />

    <TextView
        android:id="@+id/login_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="16sp"
        android:textColor="@color/col"
        android:text="Login"
        android:gravity="center"
        android:fontFamily="@font/poller_one"
        android:layout_marginTop="30dp"
        app:layout_constraintWidth_percent="0.35"
        app:layout_constraintHeight_percent="0.06"
        android:background="@drawable/blue_fill__rounded_color"
        app:layout_constraintTop_toBottomOf="@+id/pass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/sign_up_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/darkgreen_fill__rounded_color"
        android:gravity="center"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.06"
        android:layout_marginBottom="10dp"
        android:text="@string/signup"
        android:textSize="12sp"
        android:fontFamily="@font/poller_one"
        app:layout_constraintBottom_toTopOf="@id/or"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:text="or"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/google"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/google"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:srcCompat="@drawable/ic_google_svg"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>